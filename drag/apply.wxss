.apply-cnt .ui-top-info {
    height: 159px;
}

.apply-cnt-info .loan-sum-text {
    padding-top: 10px;
}

.drag-info {
    margin: 40px auto 0;
    width: 300px;
    height: 100px;
    padding: 20px 15px;
    background-color: #fff;
    border-radius: 10px;
}

.drag {
    position: relative;
    height: 7px;
}

.drag-icon {
    position: absolute;
    z-index: 1;
    width: 22px;
    height: 22px;
    border: 1px solid #ebeaea;
    border-radius: 50%;
}

.drag-l {
    left: 0;
    top: -8px;
    background-color: #fff;
}

.drag-l .icon {
    margin: 4px auto 0;
    width: 14px;
    height: 14px;
    background-color: #f5b774;
    border-radius: 50%;

}

.drag-r {
    right: 0;
    top: -8px;
    background-color: #fff;
}



.drag-progress-bar {
    position: absolute;
    top: 0px;
    left: 0;
    z-index: 2;
    width: 100%;
    height: 8px;

}

.progress-bar {
    position: relative;
    margin: 0 14px 0 11px;
    height: 7px;
    border: 1px solid #ebeaea;
    border-left: none;
    border-right: none;
    background-color: #fff;
}

.drag-progress-bar-icon {
    position: absolute;
    z-index: 3;
    top: -12px;
    width: 30px;
    height: 30px;
    margin: 0 0 0 -14px;
    background-color: rgba(246, 187, 148, 0.3);
    border-radius: 50%;
}

.drag-progress-bar-icon .icon {
    margin: 4px auto 0;
    width: 10px;
    height: 10px;
    border: 6px solid #f5b774;
    background-color: #fff;
    border-radius: 50%;
}

.progress-bar-select {
    position: absolute;
    top: -1px;
    left: 0px;
    z-index: 2px;
    height: 9px;
    background-color: #f5b774;
}

.progress-bar-hollow {
    position: absolute;
    z-index: 2;
    top: -1px;
    right: 0;
    width: 9px;
    height: 9px;
    background-color: #fff;
}
